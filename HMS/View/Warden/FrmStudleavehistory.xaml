    <StackLayout Orientation="Vertical">
        <Frame CornerRadius="35" Margin="17,15,20,10" HeightRequest="35" WidthRequest="50">
            <forms:AutoSuggestBox x:Name="txtsearchbykeyword" HorizontalOptions="FillAndExpand"  PlaceholderText="Search by Leave Name" TextMemberPath="leaveTypeName" DisplayMemberPath="leaveTypeName" Margin="-7" TextChanged="txtsearchbykeyword_TextChanged" SuggestionChosen="txtsearchbykeyword_SuggestionChosen"/>
        </Frame>
        <ListView  x:Name="_listView"  ItemsSource="{Binding Studentleavedata}" SelectionMode="None" VerticalOptions="FillAndExpand" VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never"  HasUnevenRows="true">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame VerticalOptions="FillAndExpand" BorderColor="DarkBlue" Margin="20,10,20,10" CornerRadius="20">
                            <StackLayout Orientation="Vertical">
                                <!--<StackLayout Orientation="Horizontal" Spacing="3">
                                    <Label Text="StudId:-" FontFamily="{StaticResource BoldFont}" FontSize="20"/>
                                    <Label Text="{Binding stuId}" FontFamily="{StaticResource BoldFont}" FontSize="20"/>
                                </StackLayout>-->
                                <StackLayout Orientation="Horizontal" Spacing="3">
                                    <Label Text="StudName:-" FontFamily="{StaticResource BoldFont}" FontSize="20"/>
                                    <Label Text="{Binding stuName}" FontFamily="{StaticResource BoldFont}" FontSize="20"/>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal" Spacing="3">
                                    <Label Text="HostelLeaveId:-" FontFamily="{StaticResource BoldFont}" FontSize="20"/>
                                    <Label Text="{Binding hostelLeaveTypeId}" FontFamily="{StaticResource BoldFont}" FontSize="20"/>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal" Spacing="3">
                                    <Label Text="Leave Name:-" FontFamily="{StaticResource BoldFont}" FontSize="20"/>
                                    <Label Text="{Binding leaveTypeName}" FontFamily="{StaticResource BoldFont}" FontSize="20"/>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal" Spacing="3">
                                    <Label Text="Reason:-" FontFamily="{StaticResource BoldFont}" FontSize="20"/>
                                    <Label Text="{Binding reason}" FontFamily="{StaticResource BoldFont}" FontSize="20"/>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal" Spacing="3">
                                    <Label Text="LeaveFromDate:-" FontFamily="{StaticResource BoldFont}"  FontSize="20"/>
                                    <Label Text="{Binding leaveFromDate}" FontFamily="{StaticResource BoldFont}" Margin="3" FontSize="15"/>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal" Spacing="3">
                                    <Label Text="LeaveToDate:-" FontFamily="{StaticResource BoldFont}" FontSize="20"/>
                                    <Label Text="{Binding leaveToDate}" FontFamily="{StaticResource BoldFont}" Margin="3" FontSize="15"/>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal" Spacing="3">
                                    <Label Text="MobileNo:-" FontFamily="{StaticResource BoldFont}" FontSize="20"/>
                                    <Label Text="{Binding mobileNo}" FontFamily="{StaticResource BoldFont}" FontSize="20"/>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal" Spacing="3">
                                    <Label Text="IsApproved:-" FontFamily="{StaticResource BoldFont}" FontSize="20"/>
                                    <Label Text="{Binding isApproved}" FontFamily="{StaticResource BoldFont}" FontSize="20"/>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
