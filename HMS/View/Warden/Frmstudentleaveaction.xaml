                            </StackLayout>
                            <StackLayout Orientation="Horizontal" Spacing="3">
                                <Label Text="FromDate:-" FontFamily="{StaticResource BoldFont}" FontSize="20"/>
                                <Label Text="{Binding fromDate}" FontFamily="{StaticResource BoldFont}" Margin="2" FontSize="20"/>
                            </StackLayout>
                            <StackLayout Orientation="Horizontal" Spacing="3">
                                <Label Text="ToDate:-" FontFamily="{StaticResource BoldFont}" FontSize="20"/>
                                <Label Text="{Binding toDate}" FontFamily="{StaticResource BoldFont}" Margin="2" FontSize="20"/>
                            </StackLayout>
                            <StackLayout Orientation="Horizontal" Spacing="3">
                                <Label Text="LeaveType:-" FontFamily="{StaticResource BoldFont}" FontSize="20"/>
                                <Label Text="{Binding leaveType}" FontFamily="{StaticResource BoldFont}" FontSize="20"/>
                            </StackLayout>
                            <StackLayout Orientation="Horizontal" Spacing="3">
                                <Label Text="Parent Approve:-" FontFamily="{StaticResource BoldFont}" FontSize="20"/>
                                <Label Text="{Binding isParentApproved}" FontFamily="{StaticResource BoldFont}" FontSize="20"/>
                            </StackLayout>
                        </StackLayout>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={x:Reference studentleaveaction}, Path=BindingContext.LeaveActionOption}" CommandParameter="{Binding}" NumberOfTapsRequired="1"/>
                        </Frame.GestureRecognizers>
                    </Frame>
                    <!--</SwipeView>-->
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
